{
    "manifest_version": 3,
    "name": "Veo3 Infinity",
    "version": "1.0.3",
    "description": "AI Video Generation for Google Flow - Developed by Shakil Ahmed",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "sidePanel"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://labs.google/*",
                "https://labs.google/fx/*",
                "https://labs.google/fx/tools/flow/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Veo3 Infinity"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}